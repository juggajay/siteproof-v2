# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Trigger.dev Configuration
TRIGGER_API_KEY=your-trigger-api-key
TRIGGER_API_URL=https://api.trigger.dev

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=SiteProof

# Security Configuration
NEXTAUTH_SECRET=your-nextauth-secret
SESSION_SECRET=your-session-secret

# Rate Limiting (Redis URL for production)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760 # 10MB in bytes
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/*,application/pdf

# Email Configuration (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@siteproof.com

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project

# Analytics (optional)  
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Weather API (for daily diary)
NEXT_PUBLIC_WEATHER_API_KEY=your-openweathermap-key

# Slack Integration (optional)
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SENTRY=false