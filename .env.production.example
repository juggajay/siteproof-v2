# SiteProof V2 Production Environment Variables
# These are examples - actual values should be set in Vercel dashboard

# ============================================
# Feature Flags (Flagsmith)
# ============================================
NEXT_PUBLIC_FLAGSMITH_ENV_ID=production_env_id
NEXT_PUBLIC_FLAGSMITH_API_URL=https://flagsmith.siteproof.com
FLAGSMITH_API_TOKEN=@flagsmith-production-token

# Emergency overrides (use sparingly)
NEXT_PUBLIC_FORCE_OLD_DESIGN=false

# ============================================
# Monitoring & Analytics
# ============================================
NEXT_PUBLIC_SENTRY_DSN=@sentry-dsn-production
SENTRY_AUTH_TOKEN=@sentry-auth-token
NEXT_PUBLIC_POSTHOG_KEY=@posthog-production-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ============================================
# Deployment
# ============================================
NEXT_PUBLIC_SITE_URL=https://siteproof.com
SITE_URL=https://siteproof.com
REVALIDATE_TOKEN=@revalidate-token
SLACK_WEBHOOK_URL=@slack-webhook-production

# ============================================
# Database & Storage (Supabase)
# ============================================
NEXT_PUBLIC_SUPABASE_URL=@supabase-production-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=@supabase-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=@supabase-production-service-role-key
DATABASE_URL=@database-production-url

# ============================================
# Performance
# ============================================
NODE_ENV=production
NEXT_PUBLIC_VERCEL_ENV=production
