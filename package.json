{
  "name": "siteproof-v2",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@8.15.1",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "test:ui": "pnpm -r run test:ui",
    "test:coverage": "pnpm -r run test:coverage",
    "test:e2e": "pnpm --filter web playwright test",
    "test:e2e:ui": "pnpm --filter web playwright test --ui",
    "test:a11y": "pnpm --filter web playwright test tests/a11y",
    "test:all": "pnpm test && pnpm test:e2e && pnpm test:a11y",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "type-check": "pnpm -r run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prepare": "husky",
    "performance:baseline": "./scripts/performance/baseline.sh",
    "performance:analyze": "pnpm build && pnpm --filter web lighthouse:ci",
    "lighthouse:ci": "pnpm --filter web lighthouse:ci",
    "lighthouse:local": "lighthouse http://localhost:3000 --view",
    "percy:test": "percy exec -- pnpm test:e2e tests/visual",
    "visual:baseline": "npx tsx tests/visual/capture-baseline.ts",
    "visual:current": "npx tsx tests/visual/capture-current.ts",
    "visual:compare": "npx tsx tests/visual/compare.ts",
    "visual:update": "rm -rf tests/visual/baseline && cp -r tests/visual/current tests/visual/baseline",
    "rollback:emergency": "./scripts/emergency-rollback.sh",
    "verify:rollback": "pnpm --filter web tsx scripts/verify-rollback.ts",
    "check:errors": "open https://sentry.io/siteproof",
    "check:performance": "open https://vercel.com/siteproof/analytics",
    "check:flags": "open https://flagsmith.siteproof.com"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "SiteProof v2 - Monorepo",
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/node": "^20.11.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
